<% layout('layouts/boilerplate') %> 
    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new">New Campgrounds</a>
    <% for(let campground of campgrounds){ %>
        <div class="card">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= campground.image %> " class="img-fluid" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <div class="card-title"><%= campground.title %></div>
                        <div class="card-text"><%= campground.description %></div>
                        <p class="text-muted">
                            <%= campground.location %></p> 
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %> ">View <%= campground.title %> </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- <ul>
            <li><a href="/campgrounds/<%= campground._id %>"><%= campground.title %> </a></li>
        </ul> -->
    <% } %>  
    
